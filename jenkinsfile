pipeline {
  agent any
    options {
        timestamps()
      }
    stages {
	      stage("Install Libraries") {
		        steps {
			        sh 'python3 -m pip install -r requirements.txt'
		          }
	          }
    stage("Start Pytest") {
        steps {
          sh 'python3 -m pytest -v --junitxml=report.xml'
          echo 'Pytest is ready'
          }
        }
	  stage("Start Main.py") {
		    steps {
			    sh 'python3 main.py start'
			    echo 'Main.py is done'
		      }
	      }
    }
}
